<!doctype html>
<html lang="en">
<%- include('partials/head', { title: 'Product — JNG' }) %>
<body>
<div class="app">
  <%- include('partials/nav', { activePage: 'products' }) %>

  <main class="main">
    <div class="topbar"><button id="menu-toggle" class="menu-toggle">☰</button><div class="brand">Product</div></div>

    <section class="section">
      <% if (!product) { %>
        <h2>Product not found</h2>
        <p class="muted">Please return to the product list.</p>
        <a class="btn btn-primary" href="/products">Back to products</a>
      <% } else { %>
        <div style="display:flex;gap:20px;flex-wrap:wrap">
          <div style="flex:1;min-width:320px"><img src="/<%= product.image %>" style="width:100%;border-radius:8px" alt="<%= product.name %>"></div>
          <div style="flex:1;min-width:320px">
            <h1><%= product.name %></h1>
            <p><%= product.description %></p>
            <div style="font-weight:800;color:var(--primary);font-size:20px"><%= formatCurrency(product.price) %></div>
            <div style="margin-top:12px">
              <button class="detail-add-to-cart" data-id="<%= product.id %>">Add to cart</button>
            </div>
          </div>
        </div>
      <% } %>
    </section>

    <%- include('partials/footer') %>
  </main>

  <%- include('partials/chat') %>
</div>

<script src="/scripts/main.js"></script>
</body>
</html>
